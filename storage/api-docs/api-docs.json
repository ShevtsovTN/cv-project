    "components": {
        "schemas": {
            "AttachSiteRequest": {
                "required": [
                    "site_id",
                    "active",
                    "external_id"
                ],
                "properties": {
                    "site_id": {
                        "description": "The ID of the site",
                        "type": "integer",
                        "example": 1
                    },
                    "active": {
                        "description": "Whether the site is active",
                        "type": "boolean",
                        "example": true
                    },
                    "external_id": {
                        "description": "The external ID of the site",
                        "type": "string",
                        "maxLength": 255,
                        "example": "ext12345"
                    }
                },
                "type": "object"
            },
            "GetStatisticRequest": {
                "properties": {
                    "dateFrom": {
                        "description": "Start date for the statistics in YYYY-MM-DD format",
                        "type": "string",
                        "format": "date",
                        "example": "2023-01-01"
                    },
                    "dateTo": {
                        "description": "End date for the statistics in YYYY-MM-DD format",
                        "type": "string",
                        "format": "date",
                        "example": "2023-01-31"
                    },
                    "direction": {
                        "description": "Sort direction",
                        "type": "string",
                        "enum": [
                            "asc",
                            "desc"
                        ],
                        "example": "asc"
                    },
                    "sortBy": {
                        "description": "Field to sort by",
                        "type": "string",
                        "enum": [
                            "impressions",
                            "revenue"
                        ],
                        "example": "impressions"
                    },
                    "perPage": {
                        "description": "Number of items per page",
                        "type": "integer",
                        "maximum": 100,
                        "minimum": 1,
                        "example": 10
                    },
                    "page": {
                        "description": "Page number",
                        "type": "integer",
                        "minimum": 1,
                        "example": 1
                    }
                },
                "type": "object"
            },
            "ProviderRequest": {
                "properties": {
                    "search": {
                        "description": "Search term",
                        "type": "string",
                        "maxLength": 10,
                        "minLength": 3,
                        "example": "example"
                    },
                    "sortBy": {
                        "description": "Field to sort by",
                        "type": "string",
                        "enum": [
                            "id",
                            "name",
                            "active"
                        ],
                        "example": "id"
                    },
                    "direction": {
                        "description": "Sort direction",
                        "type": "string",
                        "enum": [
                            "asc",
                            "desc"
                        ],
                        "example": "asc"
                    },
                    "page": {
                        "description": "Page number",
                        "type": "integer",
                        "minimum": 1,
                        "example": 1
                    },
                    "perPage": {
                        "description": "Number of items per page",
                        "type": "integer",
                        "maximum": 100,
                        "minimum": 1,
                        "example": 10
                    }
                },
                "type": "object"
            },
            "SiteRequest": {
                "properties": {
                    "search": {
                        "description": "Search term",
                        "type": "string",
                        "maxLength": 10,
                        "minLength": 3,
                        "example": "example"
                    },
                    "sortBy": {
                        "description": "Field to sort by",
                        "type": "string",
                        "enum": [
                            "id",
                            "name",
                            "url",
                            "provider_key"
                        ],
                        "example": "name"
                    },
                    "direction": {
                        "description": "Sort direction",
                        "type": "string",
                        "enum": [
                            "asc",
                            "desc"
                        ],
                        "example": "asc"
                    },
                    "page": {
                        "description": "Page number",
                        "type": "integer",
                        "minimum": 1,
                        "example": 1
                    },
                    "perPage": {
                        "description": "Number of items per page",
                        "type": "integer",
                        "maximum": 100,
                        "minimum": 1,
                        "example": 10
                    }
                },
                "type": "object"
            },
            "StoreProviderRequest": {
                "required": [
                    "name",
                    "tech_name",
                    "active"
                ],
                "properties": {
                    "name": {
                        "description": "The name of the provider",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Example Provider"
                    },
                    "tech_name": {
                        "description": "The technical name of the provider",
                        "type": "string",
                        "maxLength": 255,
                        "example": "example_provider"
                    },
                    "active": {
                        "description": "Whether the provider is active",
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "StoreSiteRequest": {
                "required": [
                    "name",
                    "url",
                    "provider_key"
                ],
                "properties": {
                    "name": {
                        "description": "The name of the site",
